<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contact_List_App.Views.MainPage"
             Title="Add Contact">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="nameEntry" Placeholder="Name" />
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="phoneEntry" Placeholder="Phone Number" Keyboard="Telephone" />

        <Button Text="Save Contact" Clicked="OnSaveContactClicked"/>
        <Button Text="View All Contacts" Clicked="OnViewContactsClicked"/>
    </VerticalStackLayout>
</ContentPage>
