<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Contact_List_App.Views.ContactsPage">

	<StackLayout Padding="20">
		<Label Text="Contacts List"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="0,20,0,20" />

		<CollectionView x:Name="ContactsListView"
                        ItemsSource="{Binding Contacts}"
                        SelectionChanged="OnContactSelected">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Frame Padding="10" Margin="0,5" BorderColor="LightGray">
						<VerticalStackLayout>
							<Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18" />
							<Label Text="{Binding Email}" FontSize="14" />
						</VerticalStackLayout>
					</Frame>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</StackLayout>
</ContentPage>
